<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.crafstman">

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".explain.login.LoginActivity"
            android:label="@string/title_activity_login"></activity>
        <activity
            android:name=".dialog.ui.dialog"
            android:theme="@style/AppThemecrsftsman_dialog_activity"></activity>
        <activity
            android:name=".create.ui.CreateNewUserActivity"
            android:label="@string/title_activity_sing_up"
            android:theme="@style/AppThemecrsftsman_sing_up_activity" />
        <activity
            android:name=".login.ui.LoginActivity"
            android:label="@string/title_activity_login"
            android:theme="@style/AppThemecrsftsman_error_activity" />
        <activity
            android:name=".explain.ExplainActiivity"
            android:hardwareAccelerated="false"
            android:theme="@style/AppThemecrsftsman_explain_activity" />
        <activity
            android:name=".main.MainActivity"
            android:theme="@style/AppThemecrsftsman">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".error.ErrorAcrivity"
            android:theme="@style/AppThemecrsftsman_error_activity">
            <intent-filter>
                <action android:name="android.explain.activity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>